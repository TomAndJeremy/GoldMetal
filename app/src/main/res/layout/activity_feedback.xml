<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:headview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/more_rela_normal"
    android:orientation="vertical"
    tools:context="com.juttec.goldmetal.activity.FeedbackActivity">

    <com.juttec.goldmetal.customview.HeadLayout
        android:id="@+id/head_layout"
        style="@style/HeadBarStytle"
        headview:headtitle="@string/head_title_feedback"
        headview:leftimg="@mipmap/nav_btn_back_arrow"
        />


    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </ListView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="@color/feedback_linear_gray"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/et_feedback"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入反馈信息"
            android:paddingLeft="8dp"
            android:padding="5dp"
            android:minHeight="40dp"
            android:maxLines="3"
            android:background="@drawable/edit_feedback"
            android:textSize="@dimen/small_size"/>

        <Button
            android:id="@+id/btn_send"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:background="@drawable/btn_comment_selector"
            android:text="提交"
            android:layout_marginLeft="8dp"
            android:textColor="@drawable/textcolor_send_selector"
            android:textSize="@dimen/normal_size"
            />

    </LinearLayout>




</LinearLayout>
