<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:headview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/more_rela_normal"
    android:orientation="vertical"
    tools:context="com.juttec.goldmetal.activity.FeedbackActivity">

    <com.juttec.goldmetal.customview.HeadLayout
        android:id="@+id/head_layout"
        style="@style/HeadBarStytle"
        headview:headtitle="@string/head_title_feedback"
        headview:leftimg="@mipmap/nav_btn_backa_arrow"
        />


    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </ListView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/feedback_linear_gray"
        android:gravity="center">

        <EditText
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:hint="请输入反馈信息"
            android:paddingLeft="8dp"
            android:background="@drawable/edit_feedback"/>

        <Button
            android:id="@+id/btn_send"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:background="@drawable/btn_selector"
            android:text="提交"
            android:layout_marginLeft="15dp"
            android:textColor="#fff"
            android:textSize="18sp"
            />

    </LinearLayout>


</LinearLayout>
