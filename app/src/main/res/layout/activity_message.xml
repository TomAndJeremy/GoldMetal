<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.juttec.goldmetal.customview.HeadLayout
        android:id="@+id/head_layout"
        style="@style/HeadBarStytle"
        app:headtitle="消息"
        app:leftimg="@mipmap/nav_btn_back_arrow"
        app:righttext="@string/publish_msg">

    </com.juttec.goldmetal.customview.HeadLayout>


    <android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.juttec.goldmetal.customview.listview.LoadMoreListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/divide_line"
            android:dividerHeight="@dimen/divide_line_height"
            >
        </com.juttec.goldmetal.customview.listview.LoadMoreListView>

    </android.support.v4.widget.SwipeRefreshLayout>


</LinearLayout>