<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.juttec.goldmetal.activity.news.AnalysisActivity">



    <com.juttec.goldmetal.customview.HeadLayout
        android:id="@+id/head_layout"
        style="@style/HeadBarStytle"
        app:headtitle=""
        app:leftimg="@mipmap/nav_btn_back_arrow"
        app:righttext="@string/publish_msg"
        />


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <com.juttec.goldmetal.customview.listview.PersonLoadListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/gray"
            android:dividerHeight="@dimen/divider_height"
            >
        </com.juttec.goldmetal.customview.listview.PersonLoadListView>

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
