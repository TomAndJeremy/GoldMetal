<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal">

    <com.juttec.goldmetal.customview.CircleImageView
        android:id="@+id/iv_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/content_moment_pho_others"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="8dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/msg_name"
                android:textSize="@dimen/large_size"
                android:text="张三"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11:24"
                android:layout_alignParentRight="true"
                android:textColor="@color/msg_content"
                android:textSize="@dimen/small_size"/>

        </RelativeLayout>
        <TextView

            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/msg_title"
            android:textSize="@dimen/normal_size"
            android:layout_marginTop="5dp"
            android:text="回复了你的“求救大神。。。”"/>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/msg_content"
            android:textSize="@dimen/normal_size"
            android:text="贵金属主要指。。。"/>

    </LinearLayout>


</LinearLayout>
