<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.juttec.goldmetal.activity.CreateAccount.SelectType">

    <com.juttec.goldmetal.customview.HeadLayout
        style="@style/HeadBarStytle"
        app:headtitle="@string/application_account"
        app:leftimg="@mipmap/nav_btn_back_arrow"></com.juttec.goldmetal.customview.HeadLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="@string/account_notice"
        android:textSize="@dimen/xlarge_size"
        android:textColor="@color/black"/>

    <ScrollView
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@color/account_notice_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_notice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/normal_size"
                android:text="   国金贵金属开户须知，请仔细阅读一下条款：
                aaaaaaaaaaaaaaaaaaaaaaaaaa"
                android:textColor="#3A3A3A"/>
        </LinearLayout>

    </ScrollView>


    <CheckBox
        android:id="@+id/ck_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我明白了，要申请开户"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textColor="#505050"
        />




    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/btn_selector"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="20sp" />
</LinearLayout>
