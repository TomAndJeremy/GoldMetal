<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.juttec.goldmetal.activity.ChangePWDActivity">

    <com.juttec.goldmetal.customview.HeadLayout
        style="@style/HeadBarStytle"
        app:headtitle="@string/hint_change_pwd"></com.juttec.goldmetal.customview.HeadLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/input_to_board"
        android:divider="@drawable/divider_shape"
        android:showDividers="middle|end|beginning"
        android:background="@drawable/login_input_border"
        android:orientation="vertical">


        <EditText
            android:id="@+id/login_et_name"
            style="@style/EditTextStyle_Nobg"
            android:drawableLeft="@mipmap/content_account_icon_password"
            android:hint="@string/hint_old_pwd" />


        <EditText
            style="@style/EditTextStyle_Nobg"
            android:drawableLeft="@mipmap/content_account_icon_password"
            android:hint="@string/hint_new_pwd" />


        <EditText
            android:id="@+id/login_et_pwd"
            style="@style/EditTextStyle_Nobg"
            android:drawableLeft="@mipmap/content_account_icon_password"
            android:hint="@string/hint_pwd_confirm" />


    </LinearLayout>


    <Button
        style="@style/BigButtonStyle"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:text="@string/ok"
        android:textSize="@dimen/login_button_text" />
</LinearLayout>
