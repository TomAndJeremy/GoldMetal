<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.juttec.goldmetal.activity.ChangePWDActivity">

    <com.juttec.goldmetal.customview.HeadLayout
        style="@style/HeadBarStytle"
        app:headtitle="@string/hint_change_pwd"></com.juttec.goldmetal.customview.HeadLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/input_to_board"
        android:background="@drawable/login_input_border"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_vertical">

            <ImageView
                style="@style/InputImg"
                android:src="@mipmap/content_account_icon_password" />

            <EditText
                android:id="@+id/login_et_name"
                style="@style/EditTextStyle"
                android:hint="@string/hint_old_pwd" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/input_border" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_vertical">

            <ImageView
                style="@style/InputImg"
                android:src="@mipmap/content_account_icon_password" />

            <EditText
                style="@style/EditTextStyle"
                android:hint="@string/hint_new_pwd" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/input_border" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_vertical">

            <ImageView
                style="@style/InputImg"
                android:src="@mipmap/content_account_icon_password" />

            <EditText
                android:id="@+id/login_et_pwd"
                style="@style/EditTextStyle"
                android:hint="@string/hint_pwd_confirm" />


        </LinearLayout>


    </LinearLayout>


    <Button
        style="@style/BigButtonStyle"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:text="@string/ok"
        android:textSize="@dimen/login_button_text" />
</LinearLayout>
