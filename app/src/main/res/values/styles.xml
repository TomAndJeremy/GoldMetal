<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base"></style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>


    <style name="MainActivityTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
    </style>

    <style name="MarketFragment.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/market_IndicatorColor</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabTextColor">@color/secondary_text</item>
        <item name="tabSelectedTextColor">#ffffff</item>
    </style>

    <style name="MarketFragment_Text_Hint">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/market_hint_size</item>
    </style>

    <style name="MarketFragment_Bottom_Button">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">7dp</item>
        <item name="android:textSize">@dimen/market_hint_size</item>
    </style>
    <style name="MomentFragment_Tabs_text">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@drawable/moment_tab_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/moment_tab_size</item>
    </style>

    <style name="HeadBarStytle">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!-- 资讯、服务、更多Fragment 中 RelativeLayout的样式-->
    <style name="relativeLayout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/more_rela_selector</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/rl_padding_top</item>
        <item name="android:paddingBottom">@dimen/rl_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/rl_padding_left</item>
        <item name="android:paddingRight">@dimen/rl_padding_right</item>

    </style>

    <!-- 资讯、服务、更多Fragment 中 RelativeLayout里textview的样式-->
    <style name="rl_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/rl_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/rl_text_size</item>
    </style>


    <!-- 资讯、服务、更多Fragment 中 RelativeLayout里ImageView的样式-->
    <style name="rl_image_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@mipmap/content_news_org_icon_arrow_right</item>
    </style>


    <!-- 资讯、服务、更多Fragment 中 分割线的样式-->
    <style name="divide_line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divide_line_height</item>
        <item name="android:background">@color/divide_line</item>
    </style>

    <style name="CheckBoxStyle">
        <item name="android:button">@drawable/checkbox</item>
    </style>

    <style name="BigButtonStyle">
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/content_btn_bg_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- 输入框边上的图片-->
    <style name="InputImg">
    <item name="android:layout_marginRight">10dp</item>
    <item name="android:layout_marginLeft">10dp</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">@dimen/base_text</item>
    </style>
    <!--ShareActivity 中 RelativeLayout里ImageView的样式-->
    <style name="share_image_style">
        <item name="android:layout_width">@dimen/share_img</item>
        <item name="android:layout_height">@dimen/share_img</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
    </style>



    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/base_text</item>
    </style>


    <style name="SwitchStyle">

    </style>


    <!--<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />-->

    <!--<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />-->

</resources>
